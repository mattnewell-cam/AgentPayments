{
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/verify(.*)", "dest": "api/index.js" },
    { "src": "/merchants(.*)", "dest": "api/index.js" },
    { "src": "/health", "dest": "api/index.js" },
    { "src": "/(.*)", "dest": "public/$1" }
  ]
}
